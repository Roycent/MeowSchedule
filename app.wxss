/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

.listTitle {
  font-size: 18px;
  color: #1e1e1e;
  margin-bottom: 16rpx;
}

.listContent {
  line-height: 19px;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  color: #646464;
  font-size: 16px;
  margin-bottom: 16rpx;
  max-height: 36px;
}

.listPic {
  width: 90%;
  height: 360rpx;
  margin-bottom: 16rpx;
  padding: 5%;
  
}


.list_header view {
  float: left;
  line-height: 80rpx;
}

.list_header  .list_header_right {
  float: right;
}

.list_header {
  padding-bottom: 10rpx;
  overflow: hidden;
  font-size: 12px;
  color: #666;
}

.list_box {
  padding: 0;
}

.list {
  padding: 30rpx;
  overflow: hidden;
  border-bottom: 1px solid #c8c8c8;
  padding-left: 126rpx;
  position: relative;
}

.list_left {
  position: absolute;
  left: 30rpx;
  top: 30rpx;
}

.list_left image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  margin-right: 16rpx;
}

.list_right {
  width: 100%;
}

.list_right_top {
  padding-top: 8rpx;
  width: 100%;
  overflow: hidden;
  padding-bottom: 16rpx;
}

.list_right_top view {
  color: #646464;
  float: left;
}

.list_right_top .nvg {
  float: right;
  color: #bf925c;
}

.list_right .op_type {
  color: #1e1e1e;
  font-size: 16px;
  padding-bottom: 16rpx;
}

.list_right .time {
  color: #999;
  font-size: 12px;
}

