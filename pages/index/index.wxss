.toWrite {
  width: 100rpx;
  height: 100rpx;
  background: url(http://roycent.cn/img/claw.png) no-repeat;
  padding: 0;
  background-size: cover;
  position: fixed;
  right: 74rpx;
  bottom: 100rpx;
