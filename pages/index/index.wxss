/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.item .remove{  
    width: 60px;  
    height: 100%;  
    background-color: red;  
    position: absolute;  
    top: 0;  
    right: -60px;  
    display: flex;  
    justify-content: center;  
    align-items: center;  
}  


    
.MainView{
    border-radius: 6px; 
    background-color: rgb(255, 255, 255); 
    box-shadow: rgba(0, 0, 0, 0.239216) 0px 2px 5px 0px; 
    margin-bottom: 37.5rpx; 
    padding-top:5%;
}

.MainViewImage {
  width: 100%; 
  height: 450rpx; 
  display: block; 
  
}
.MainlistView{
  width: 90%;
  padding-left: 5%; 
  padding-top: 2%; 
  padding-right: 5%;
}
.MainlistTitle {
  margin-bottom: 3px; 
  
}

.MainlistContent {
  font-size: 14px; 
  color: rgb(110, 110, 110); 
  text-align: justify; 
  line-height: 1.7em; 
  padding-left: 5%;
  padding-top:1%;
  padding-right: 5%;
}

.list_header  .list_header_right {
  float: right;
  padding-right: 3%;
}

.list_header  .list_header_left {
  float: left;
}

.list_header {
  padding-bottom: 10rpx;
  overflow: hidden;
  font-size: 12px;
  color: #666;
}

.MainViewtext{
  font-size: 14px; 
  color: rgb(110, 110, 110); 
  text-align: justify; 
  line-height: 1.7em; 
}

.searchBox{
   width:94%;
   display: block; 
   border-bottom: 1px solid rgb(229, 229, 229); 
   border-bottom-style: solid; 
  padding-left: 3%;
    padding-right: 3%;
    padding-top:0rpx;
}

.searchText{
  color: rgb(153, 153, 153); 
  font-size: 13px; 
  
  border-bottom: 1px solid rgb(229, 229, 229); 
  border-bottom-style: none;
}

.floatNavigator{

  padding: 10px 0 0;
  position: fixed;
  width: 300px;
  
}

.mylist_footer {
  color: #999;
  line-height: 64rpx;
  overflow: hidden;
  margin-top: 5px;
}

.mylist_footer .mylist_footer_left {
  float: right;
  position: fixed;
  bottom: 0rpx;
}
.FinishOpt
{
  width: 20%;
  margin-top: 20rpx;
}