<loading hidden="{{loading}}">
  页面初始化中...
</loading>
    <view class="add_pic" bindtap="uploadPic" wx-if="{{!isSrc}}">
        <view>添加图片</view>
    </view>
    <view wx:if="{{isSrc}}" class="image_box">
        <view  class="picPre">
            <image src="{{src}}"  mode="aspectFill"></image>
            <view bindtap="clearPic"></view>
        </view>
    </view>
    
    <input placeholder="输入标题" bindinput="setTitle"/>
<text>↓此处应该有一个定位的logo 当前位置</text>
<input placeholder="位置：{{address}}" class="add_title"/> 
<button bindtap="getAddr">获取当前位置</button>

    <view>
        <textarea  placeholder="添加内容" maxlength="1000"  value="" bindblur="setContent"/>
    </view>
    <view>时间选择器</view>
<picker mode="time" value="{{time}}" start="00:00" end="24:00" bindchange="listenerTimePickerSelected">
    <text>{{time}}</text>
</picker>
<view>重要程度选择器</view>
<picker mode="selector" range="{{importanceArray}}" value="{{Iindex}}" bindchange="listenerImportancePickerSelected">
    <text>{{importanceArray[Iindex]}}</text>
</picker>

<view>分类选择器</view>
<picker mode="selector" range="{{varietyArray}}" value="{{Vindex}}" bindchange="listenerVarietyPickerSelected">
    <text>{{varietyArray[Vindex]}}</text>
</picker>

<view>日期选择器</view>
<picker mode="date" value="{{date}}" start="1995-01-01" end="2055-12-31" bindchange="setDate">
    <text>{{date}}</text>
</picker>
    <button bindtap="sendNewItem" data-content="{{content}}" loading="{{isLoading}}" data-title="{{title}}" data-address="{{address}}" data-date="{{date}}" data-Iindex="{{Iindex}}" data-Vindex="{{Vindex}}" data-time="{{time}}" hover-start-time="200" disabled="{{isdisabled}}">增加日程</button>