<!--pages/listDetail/listDetail.wxml-->
<import src="../template/list.wxml" />
<loading hidden="{{loading}}">
  页面加载中...
</loading>
<view hidden="{{!loading}}">
<view class="Out">


 <!--这个是图片--> 

 
<view class="PicStyle">
    <image  mode="aspectFill" src="{{listPic}}" class="AddPicture" wx:if="{{listPic}}"></image>
</view>


<view hidden="{{!wannaChange}}">
  <view>标题</view>
  <input class="TitleStyle" value="{{listTitle}}" bindinput="changeTitle"/>
  <view>内容</view>
  <view ><textarea class="Text" value="{{listContent}}" bindinput="changeContent" /></view>

  <view class="Option">
  <text class="OptionText">日期</text>
  <picker mode="date" value="{{listDate}}" start="1995-01-01" end="2055-12-31" bindchange="changeDate">
    <text>{{listDate}}</text>
  </picker>
  </view>

  <view class="Option">
  <text class="OptionText">时间：</text>
  <picker mode="time" value="{{listTime}}" start="00:00" end="23:59" bindchange="changeTime">
  <text>{{listTime}}</text></picker>
  </view>

  <view class="Option">
  <view><image src="../../pages/Resource/Location.png" class="Location"></image>
  <view class="AddLocation" bindtap="changeAddr">地址：{{listAddress}}</view>
  </view>
  </view>

  <view class="Option">
  <text class="OptionText">重要程度：</text>
  <picker  mode="selector" range="{{importanceArray}}" value="{{listImportance}}" bindchange="changeImportance">
    <text class="OptionText">{{importanceArray[listImportance]}}</text>
  </picker>
  </view>

  <view class="Option">
  <text class="OptionText">分类：</text>
  <picker mode="selector" range="{{varietyArray}}" value="{{listVariety}}" bindchange="changeVariety">
      <text class="OptionText">{{varietyArray[listVariety]}}</text>
  </picker>
  </view>
    <button bindtap="saveChanges" class="AddButton">保存修改</button>
</view>



<view hidden="{{wannaChange}}">

  <!--这个是标题-->
  <view class="TitleStyle">
  <switch class="FinishOpt" type="checkbox" checked="{{finished}}" bindchange="finishedIt" /><text>{{listTitle}}</text></view>
  <!--这个是内容-->
  <view class="Text"><text>{{listContent}}</text></view>

  <view class="Option"><text>时间: {{listDate}}  {{listTime}}</text></view>

  <view class="Option">
    <image src="../../pages/Resource/Location.png" class="Location"></image>
    <text class="AddLocation">位置：{{listAddress}}</text>
  </view>
  <view class="Option"><text>重要程度：{{importanceArray[listImportance]}}</text></view>
  <view class="Option"><text>分类: {{varietyArray[listVariety]}}</text></view>
  
  
 
  <view class="ButtonPanel">
  
    <text bindtap="wannaChange" class="Operate">编辑</text>
    <text bindtap="deleteThis" class="Operate">删除</text>
  
  </view>
  

  <view hidden="{{isMine}}">
  <button bindtap="addToMine" class="AddButton">添加到我的日程</button>
  </view>
</view>


</view>
</view>